<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8F78A8"
    android:orientation="vertical">

    <Space
        android:layout_width="422dp"
        android:layout_height="44dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/dice_1" />

    <LinearLayout
        android:id="@+id/twoDiceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dice2ImageView"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_weight="1"
            android:src="@drawable/dice_1" />

        <ImageView
            android:id="@+id/dice3ImageView"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_weight="1"
            android:src="@drawable/dice_1" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="26dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="75" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="75"
            android:backgroundTint="#6CCA46"
            android:text="Roll One Die" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="75" />

        <Button
            android:id="@+id/roll2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="75"
            android:backgroundTint="#6CCA46"
            android:text="Roll Two Dice" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="75" />
    </LinearLayout>

</LinearLayout>